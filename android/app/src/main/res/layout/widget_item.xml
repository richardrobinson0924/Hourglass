<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@drawable/shape"
    android:gravity="center_vertical"
    android:id="@+id/ll"
    android:baselineAligned="false">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1">

        <ProgressBar
            android:layout_marginStart="10dp"
            android:id="@+id/progressBarTeal"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:indeterminate="false"
            android:max="100"
            android:progress="25"
            android:progressBackgroundTint="@color/tealBG"
            android:progressDrawable="@drawable/circle_progress_bar"
            android:progressTint="@color/tealFG"
            android:visibility="visible"/>

        <ProgressBar
            android:layout_marginStart="10dp"
            android:id="@+id/progressBarDeepPurple"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="@dimen/circleSize"
            android:layout_height="@dimen/circleSize"
            android:indeterminate="false"
            android:max="100"
            android:progress="25"
            android:progressBackgroundTint="@color/deepPurpleBG"
            android:progressDrawable="@drawable/circle_progress_bar"
            android:progressTint="@color/deepPurpleFG"
            android:visibility="gone" />

        <ProgressBar
            android:layout_marginStart="10dp"
            android:id="@+id/progressBarIndigo"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="@dimen/circleSize"
            android:layout_height="@dimen/circleSize"
            android:indeterminate="false"
            android:max="100"
            android:progress="25"
            android:progressBackgroundTint="@color/indigoBG"
            android:progressDrawable="@drawable/circle_progress_bar"
            android:progressTint="@color/indigoFG"
            android:visibility="gone" />

        <ProgressBar
            android:layout_marginStart="10dp"
            android:id="@+id/progressBarOrange"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="@dimen/circleSize"
            android:layout_height="@dimen/circleSize"
            android:indeterminate="false"
            android:max="100"
            android:progress="25"
            android:progressBackgroundTint="#FFE0B2"
            android:progressDrawable="@drawable/circle_progress_bar"
            android:progressTint="@color/orangeFG"
            android:visibility="gone" />

        <ProgressBar
            android:layout_marginStart="10dp"
            android:id="@+id/progressBarRed"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="@dimen/circleSize"
            android:layout_height="@dimen/circleSize"
            android:indeterminate="false"
            android:max="100"
            android:progress="25"
            android:progressBackgroundTint="#FFCDD1"
            android:progressDrawable="@drawable/circle_progress_bar"
            android:progressTint="@color/redFG"
            android:visibility="gone" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/textview"
            android:paddingBottom="5dp"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/details_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/textview"
            android:textSize="16sp"/>
    </LinearLayout>
</LinearLayout>
